<?xml version="1.0" encoding="utf-8"?>
<com.example.hezhanheng.scrollactivity.StickyNavLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    tools:context="com.example.hezhanheng.scrollactivity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/guide_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/guide_ll_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal">
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide_ib_start"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/guide_ll_point"
            android:background="@null"
            android:visibility="gone"/>
    </RelativeLayout>
    <com.example.hezhanheng.scrollactivity.SimpleViewPagerIndicator
        android:id="@id/id_stickynavlayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff">
    </com.example.hezhanheng.scrollactivity.SimpleViewPagerIndicator>
    <android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>

</com.example.hezhanheng.scrollactivity.StickyNavLayout>
